  url = {http://www.sciencedirect.com/science/article/pii/S0378426615002824},
  doi = {10.1016/j.jbankfin.2015.10.005},
  shorttitle = {A New Approach to Statistical Arbitrage},
  abstract = {Statistical arbitrage strategies are typically based on models of returns. We introduce a new statistical arbitrage strategy based on dynamic factor models of prices. Our objective in this paper is to exploit the mean-reverting properties of prices reported in the literature. We do so because, to capture the same information using a return-based factor model, a much larger number of lags would be needed, leading to inaccurate parameter estimation. To empirically test the relative performance of return-based and price-based models, we construct portfolios (long-short, long-only, and equally weighted) based on the forecasts generated by two dynamic factor models. Using the stock of companies included in the S\&P 500 index for constructing portfolios, the empirical analysis statistically tests the relative forecasting performance using the Diebold–Mariano framework and performing the test for statistical arbitrage proposed by Hogan et al. (2004). Our results show that prices allow for significantly more accurate forecasts than returns and pass the test for statistical arbitrage. We attribute this finding to the mean-reverting properties of stock prices. The high level of forecasting accuracy using price-based factor models has important theoretical and practical implications.},
  journaltitle = {Journal of Banking \& Finance},
  shortjournal = {Journal of Banking \& Finance},
  urldate = {2019-02-10},
  date = {2016-04-01},
  pages = {134-155},
  keywords = {Diebold–Mariano framework,Long-only strategies,Long-short strategies,Price-based factor models,Return-based factor models,Statistical arbitrage},
  author = {Focardi, Sergio M. and Fabozzi, Frank J. and Mitov, Ivan K.},
  file = {C:\\Users\\Sami\\Zotero\\storage\\T93735BC\\Focardi ym. - 2016 - A new approach to statistical arbitrage Strategie.pdf;C:\\Users\\Sami\\Zotero\\storage\\M7ERGKPD\\S0378426615002824.html}
