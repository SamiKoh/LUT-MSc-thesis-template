  keywords = {Pairs trading,Mean-reverting process,Optimal stopping,Quasi-variational inequalities},
  author = {Song, Qingshuo and Zhang, Qing},
  file = {C:\\Users\\Sami\\Zotero\\storage\\E576DHEV\\Song ja Zhang - 2013 - An optimal pairs-trading rule.pdf;C:\\Users\\Sami\\Zotero\\storage\\NYHMFX8T\\S0005109813003609.html}
